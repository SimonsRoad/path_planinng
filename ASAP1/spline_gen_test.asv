%% spline generation vs one chuck 
% spline order 
n=7;
waypoint={};
x0=[0 0];
xdot0=[0 0];
waypoint{1}=[1 2];
waypoint{2}=[2 3];
waypoint{3}=[3 2];

vset=(waypoint{1}-x0)';

for i=2:length(waypoint)
    vset=[vset ; waypoint{i}(1)-waypoint{i-1}(1) ; waypoint{i}(2)-waypoint{i-1}(2) ];
end

PM=path_manager([]);
sum_jerk=@(v) min_jerk(v,n,x0,xdot0,waypoint,PM);

% two-stage optimization 

upper_limit=2;
lower_limit=-2;
len=length(vset);

